{
  "compileOnSave": true,
  "compilerOptions": {
    "target": "ES5",
    "module": "commonjs",
    "rootDir": "./src",
    "outDir": "dist",
    "removeComments": true,
    "strict": true,
    "moduleResolution": "node",
    "baseUrl": "./",
    "pretty": true,
    "allowSyntheticDefaultImports": true,
    "paths": {
      "@enums": ["src/enums"],
      "@interfaces": ["src/interfaces"],
      "@types": ["src/types"]
    }
  },
  "exclude": [
    "node_modules",
    "./**/**.**.ts",
    "src/**/*.spec.ts"
  ],
  "typedocOptions": {
    "entryPoints": [
      "src/enums/index.ts",
      "src/interfaces/index.ts",
      "src/types/index.ts"
    ],
    "out": "dist/docs",
    "exclude": [
      "../node_modules",
      "src/**/*.spec.ts",
      "./jest.config.ts"
    ],
    "highlightTheme": "light-plus",
    "name": "API Documentation",
    "hideGenerator": true
  },
}